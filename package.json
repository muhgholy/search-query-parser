{
	"name": "@muhgholy/string-search-builder",
	"version": "1.0.0",
	"description": "A portable, framework-agnostic search query parser with Gmail-like syntax support",
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"lint": "eslint src --ext .ts",
		"lint:fix": "eslint src --ext .ts --fix",
		"typecheck": "tsc --noEmit",
		"prepublishOnly": "npm run build"
	},
	"keywords": [
		"search",
		"query",
		"parser",
		"tokenizer",
		"gmail",
		"filter",
		"email",
		"search-syntax"
	],
	"author": "Muhammad Gholy",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/muhgholy/string-search-builder.git"
	},
	"bugs": {
		"url": "https://github.com/muhgholy/string-search-builder/issues"
	},
	"homepage": "https://github.com/muhgholy/string-search-builder#readme",
	"devDependencies": {
		"@types/node": "^20.10.0",
		"@typescript-eslint/eslint-plugin": "^6.13.0",
		"@typescript-eslint/parser": "^6.13.0",
		"@vitest/coverage-v8": "^1.0.0",
		"eslint": "^8.55.0",
		"tsup": "^8.0.0",
		"typescript": "^5.3.0",
		"vitest": "^1.0.0"
	},
	"engines": {
		"node": ">=18"
	}
}
